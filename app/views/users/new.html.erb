  <a class="navbar-brand" href="#">Fly Ally</a>
</nav>


<% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                 Please Check your Inputs <a href="#" data-toggle="modal" data-target="#ErrorModal"> Know More </a>
            </div>
    <% end %>

<div class="modal" id="ErrorModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Errors</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
            <% if @user.errors.any? %>
                <ul><% @user.errors.full_messages.each do |f| %>
                    <li><%= f %></li>
                <% end %>
                </ul>
            <% end %>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>

<div class="wrapper fadeInDown">
  <div id="formContent">
  

    <!-- Icon -->
    <div class="fadeIn first">
      <h3> Create Your Account </h3>
    </div>

    <!-- SignUp Form -->
    <%= form_with(model: @user,local: true) do |f| %>
      <%= f.text_field :username, class:"fadeIn second", placeholder: 'Enter your Name' %>
      <%= f.text_field :email, class: "fadeIn third", placeholder: 'Enter your email' %>
      <%= f.password_field :password, class: "fadeIn fourth", placeholder: "Enter your password" %>
      <%= f.password_field :password_confirmation, class: "fadeIn fourth", placeholder: "Confirm your password" %> <br>
      <%= f.submit 'SignUp', class: "fadeIn fourth" %>
    <% end %>

    <div id="formFooter">
      Already  have an account? &nbsp;  <a class="underlineHover" ><%= link_to "Login", login_path%></a>
    </div>
  </div>
</div>

